.listItem
    width 100%
    height 70px
    background #FFFFFF
    box-shadow 0 13px 25px 0 rgba(0, 0, 0, 0.12)
    border-radius 100px
    display flex
    justify-content space-between
    align-items center
    box-sizing border-box
    cursor pointer
    .listItem__leftInfo
        overflow: hidden;
        display flex
        .listItem__leftInfo__avatar
            height 36px
            width 36px
            min-width 36px
            border-radius 50%
            background red
            margin 0 15px
        .listItem__leftInfo__userInfo
            display flex
            flex-direction column
            text-align left
            max-width 70%
            .listItem__leftInfo__userInfo__name
                font-family: Avenir-Black;
                font-size: 14px;
                line-height 19px
                color: #46454C;
                font-weight 700;
                white-space nowrap
                text-overflow ellipsis
                overflow hidden
            .listItem__leftInfo__userInfo__lastMessage
                font-family: Avenir-Book;
                font-size: 14px;
                color: #000000;
                line-height: 19px;
                white-space nowrap
                text-overflow ellipsis
                overflow hidden

    .listItem__newMessages
        margin-right 15px
        display flex
        flex-direction column
        align-items: flex-end
        width 30%
        .listItem__newMessages__date
            font-family: Avenir-Heavy;
            font-size: 12px;
            color: #F13564;
        .listItem__newMessages__quantity
            height 22px
            width 22px
            background  #F13564
            border-radius 50%
            font-family: Avenir-Heavy
            color white
            line-height 22px
            font-size 16px

